@model List<Dish>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Ingredients</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price
            </td>
            <td>@foreach (var ing in item.DishIngredients)
            {
                <p>@ing.Ingredient.Name</p>
            }</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DishId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
