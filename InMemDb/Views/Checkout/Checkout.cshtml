@model InMemDb.Models.CheckOutViewModel.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}


<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            
            <h4>Delivery and payment.</h4>
            <hr/>
            <h3>Enter your delivery address</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Firstname"></label>
                <input asp-for="User.Firstname" class="form-control"/>
                <span asp-validation-for="User.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Lastname"></label>
                <input asp-for="User.Lastname" class="form-control"/>
                <span asp-validation-for="User.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.ZipCode"></label>
                <input asp-for="User.ZipCode" class="form-control"/>
                <span asp-validation-for="User.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City"></label>
                <input asp-for="User.City" class="form-control"/>
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Street"></label>
                <input asp-for="User.Street" class="form-control"/>
                <span asp-validation-for="User.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" class="form-control"/>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <h3>Card information</h3>
            <div class="form-group">
                <label asp-for="CreditCard.Name"></label>
                <input asp-for="CreditCard.Name" class="form-control"/>
                <span asp-validation-for="CreditCard.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCard.CardNumber"></label>
                <input asp-for="CreditCard.CardNumber" class="form-control"/>
                <span asp-validation-for="CreditCard.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCard.ExpirationDate"></label>
                <select>
                    <option value="01">January</option>
                    <option value="02">February </option>
                    <option value="03">March</option>
                    <option value="04">April</option>
                    <option value="05">May</option>
                    <option value="06">June</option>
                    <option value="07">July</option>
                    <option value="08">August</option>
                    <option value="09">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <select>
                    <option value="16"> 2016</option>
                    <option value="17"> 2017</option>
                    <option value="18"> 2018</option>
                    <option value="19"> 2019</option>
                    <option value="20"> 2020</option>
                    <option value="21"> 2021</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CreditCard.Cvv"></label>
                <input asp-for="CreditCard.Cvv" class="form-control"/>
                <span asp-validation-for="CreditCard.Cvv" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Pay</button>
        </form>
    </div>
</div>



